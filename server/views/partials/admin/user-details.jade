.container
	.well
		form.form-horizontal(name="userDetailsForm")
			fieldset
				legend User Details
				.form-group
					label.col-md-2.control-label First Name
					.col-md-6
						input.form-control(name="firstName", type="text", placeholder="First Name", ng-model="user.firstName")
				.form-group
					label.col-md-2.control-label Last Name
					.col-md-6
						input.form-control(name="lastName", type="text", placeholder="Last Name", ng-model="user.lastName")
				.form-group
					label.col-md-2.control-label User Name
					.col-md-6
						input.form-control(name="userName", type="text", placeholder="User Name", ng-model="user.userName", required)
				.form-group
					label.col-md-2.control-label Roles
				.form-group
					div(ng-repeat="role in user.roles")
						.col-md-2
						.col-md-6
							input.form-control(type="text", ng-model="role")
						button.btn.btn-danger(ng-click="removeRole($index)") X
					.col-md-2 
						button.btn.btn-success.pull-right(ng-click="addRole()") Add Role
						
				.form-group(hidden)
					.col-md-6
						input.form-control(name="email", type="email", placeholder="Email", ng-model="user.email", required)
				.form-group
					.col-md-6.col
						.pull-right
							button.btn.btn-primary(ng-click="update()", ng-disabled="userDetailsForm.$invalid") Submit
							| 
							a.btn.btn-default(href="/admin/users") Cancel